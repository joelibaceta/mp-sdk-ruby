source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.6'
# Use sqlite3 as the database for Active Record
gem 'sqlite3'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby
 
gem 'jquery-rails' 
gem 'turbolinks' 
gem 'jbuilder', '~> 2.0' 
gem 'sdoc', '~> 0.4.0', group: :doc

# Extra gems

gem 'bootstrap-sass'
gem 'paperclip'
gem 'state_machine'
gem 'devise'

gem 'rubocop'

# Payment Providers

gem 'mango-ruby', path: 'vendor/mango-ruby'
gem 'mercadopago-sdk', '~> 0.3.4' , path: 'vendor/sdk-ruby'
gem 'stripe', path: 'vendor/stripe-ruby'


#  Optional: I prefer use simple_form to simplify the views
gem 'simple_form'         
#  Optional: I prefer use haml for views
gem "haml-rails"          
#  Optional: I prefer use active_admin to have a small functional admin panel
gem 'activeadmin', github: 'activeadmin'    


group :development, :test do 
  gem 'byebug'
end

group :development do 
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

